<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="2023-01-31-insert-into-table-animal" author="vitali">
        <insert tableName="animal" >
            <column name="name" value="Jack"/>
            <column name="weight" value="8"/>
        </insert>
        <insert tableName="animal">
            <column name="name" value="Black"/>
            <column name="weight" value="2"/>
        </insert>
        <insert tableName="animal">
            <column name="name" value="Micky"/>
            <column name="weight" value="6"/>
        </insert>

        <rollback>
            <delete tableName="animal">
                <where>name = "Jumbo"</where>
            </delete>
            <delete tableName="animal">
                <where>name = "Bamby"</where>
            </delete>
            <delete tableName="animal">
                <where>name = "Moby"</where>
            </delete>
        </rollback>
    </changeSet>

</databaseChangeLog>